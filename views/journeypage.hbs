<!--parent body tag coming from layout -->
<img class="background-image" src="../images/951.jpg" />
<nav>
  <form action="/logout" method="post">
    <button class="navbar-logout-btn" type="submit">Logout</button>
  </form>
</nav>
<div class="journey-container">
  <h2> Hi {{ username }}! <br> Collect the things you will need!</h2>
  <form action="/items/{{items._id}}/edit" method="post">
    <div class="credits-container">
      <p> Initial credits: <span id="">100</span></p>
      <p> Current credits: <span id="credits">{{items.credits}}</span></p>
    </div>
    <div class="packing-list">
      <div class="item-container">
        <img id="item-spacesuit" class="packing-items" src="/images/astronaut.png" />
        <label for="title">Spacesuit:</label>
        <input type="text" name="spacesuitQuantity" id="spacesuitQuantity" value="{{items.spacesuitQuantity}}"
          placeholder="spacesuit quantity" />
      </div>
      <div class="item-container">
        <img id="item-food" class="packing-items" src="/images/bar.png" />
        <label for="title">Food:</label>
        <input type="text" name="foodQuantity" id="foodQuantity" value="{{items.foodQuantity}}"
          placeholder="food quantity" />
      </div>
      <div class="item-container">
        <img id="item-oxygen" class="packing-items" src="/images/oxygen-tank.png" />
        <label for="title">Oxygen:</label>
        <input type="text" name="oxygenQuantity" id="oxygenQuantity" value="{{items.oxygenQuantity}}"
          placeholder="oxygen quantity" />
      </div>
      <div class="item-container">
        <img id="item-fuel-station" class="packing-items" src="/images/fuel-station.png" />
        <label for="title">Fuel:</label>
        <input type="text" name="fuelQuantity" id="fuelQuantity" value="{{items.fuelQuantity}}"
          placeholder="fuel quantity" />
      </div>
      <div class="item-container">
        <img id="item-solar-panel" class="packing-items" src="/images/solar-panel.png" />
        <label for="title">Solar Panel:</label>
        <input type="text" name="solarpanelQuantity" id="solarpanelQuantity" value="{{items.solarpanelQuantity}}"
          placeholder="solar panel quantity" />
      </div>
      <div class="item-container">
        <img id="item-sprout" class="packing-items" src="/images/sprout.png" />
        <label for="title">Seeds:</label>
        <input type="text" name="sproutQuantity" id="sproutQuantity" value="{{items.sproutQuantity}}"
          placeholder="sprout quantity" />
      </div>
      <div class="item-container">
        <img id="item-water-bottle" class="packing-items" src="/images/water-bottle.png" />
        <label for="title">Water bottle:</label>
        <input type="text" name="waterbottleQuantity" id="waterbottleQuantity" value="{{items.waterbottleQuantity}}"
          placeholder="water bottle quantity" />
      </div>
    </div>
    <button class="btn" id="editBtn" type="submit">Update items!</button>
  </form>
  <form action="/launch" method="post">
    <button class="btn" id="launchBtn" type="submit">Launch!</button>
  </form>
</div>
<script src="/js/journeypagefunctions.js"></script>